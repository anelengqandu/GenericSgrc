@using System.Threading
@using System.Web.Optimization
@using Abp.Timing
@using Sgrc
@using Sgrc.Web.Helpers
@{
    SetAntiForgeryCookie();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Portal| //SGRC</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="Learner Office Administation Management Software" name="description" />
    <meta content="" name="//sgrc" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />



    <link rel="shortcut icon" href="~/favicon.ico">

   

   
    @Styles.Render("~/ThemePluginCSS")
    @Styles.Render("~/GlobalThemeCSS")
    @Styles.Render("~/LoginThemeCSS")
    @Scripts.Render("~/ThemeJS")
    @Scripts.Render("~/AppScriptJS")
    <!-- View specific styles -->
    @RenderSection("styles", required: false)

    <script type="text/javascript">
        //This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>

</head>


<body class="login">

      
<div class="overlay-wrapper" id="loader" style="display: none;">
    <div class="spinner">
        <div class="double-bounce1"></div>
        <div class="double-bounce2"></div>
    </div>
</div>
<div class="user-login-5">
    <div class="row bs-reset">
        <div class="col-md-6 bs-reset mt-login-5-bsfix">
            <div class="login-bg" id="particles-js">
                @*<img class="login-logo" src="../Resources/theme/assets/pages/img/login/logo.png" />*@
            </div>

        </div>
        <div class="col-md-6 login-container bs-reset mt-login-5-bsfix">

            @RenderBody()
            <div class="login-footer">
                <div class="row bs-reset">
                    <div class="col-xs-5 bs-reset">
                
                        <div class="login-copyright" style="margin-left: 60px;">
                            <p>Copyright <a href="http://www.dikizacs.co.za/">DikizaCS</a> &copy; @DateTime.Now.Year</p>
                        </div>
                    </div>
                    <div class="col-xs-7 bs-reset">
                        <div class="login-copyright text-right">
                            <p>Made with <i class="fa fa-heart"></i> by <a href="http://www.sgrc.co.za/"><i class="themecolor">//</i>sgrc</a></p>
                        </div>
                    </div>
                </div>
            </div>

        </div>

           
    </div>
</div>
  

<script>
    //Localizing momentjs
   // moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
</script>

<!-- Dynamic scripts of ABP system (They are created on runtime and can not be bundled) -->
<script src="~/api/AbpServiceProxies/GetAll?v=@(Clock.Now.Ticks)"></script>
<script src="~/AbpScripts/GetScripts?v=@(Clock.Now.Ticks)" type="text/javascript"></script>

<!-- View specific scripts -->
@RenderSection("scripts", required: false)

</body>

</html>
<style>
    .particles-js-canvas-el {
        position: absolute;
        z-index: 50;
    }
</style>
